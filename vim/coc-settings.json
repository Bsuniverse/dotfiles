{
    "diagnostic.displayByAle": true,
    "coc.preferences.extensionUpdateCheck":"weekly",
    "languageserver": {
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": ["cmake"],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
             }
        },
       "racket":{
           "command": "racket",
           "args": [
               "--lib",
               "racket-langserver"
           ],
           "filetypes": [
               "scheme"
           ]
       }
    }
}
